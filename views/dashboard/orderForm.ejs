    <script src="https://unpkg.com/rxjs@^7/dist/bundles/rxjs.umd.min.js"></script>
</head>
<body>
    <h1>Form Order</h1>
    <div>
        <div class="row justify-content-evenly">
            <div class="col-2">
                <label for="">Input Nama Makanan</label>
            </div>
            <div class="col-5">
                <span class="fas fa-backspace"></span>
                <input oninput="this.value = this.value.toUpperCase()" type="text" class="form-control" id="inputPesanan" placeholder="Input Makanan">
                <ul class="list-group"></ul>
            </div>
            <div class="col-5">
                <button class="btn btn-outline-primary" onclick="tambahDataOrderForm()">Submit</button>
            </div>
        </div>
    </div>
    
    <div>
        <form action="/dashboard/order" method="post">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Nama Pesanan</th>
                        <th>Harga</th>
                        <th>Jumlah</th>
                    </tr>
                </thead>
                <tbody id="tablebody">
    
                    
                </tbody>
            </table>
            <div class="row justify-content-end">
                <div class="col-4">
                    <input type="text" class="form-control" placeholder="Pemesan" name="pemesan">
                </div>
                <div class="col-4">
                    <button class="btn btn-lg btn-primary btn-block">Send</button>
                </div>
            </div>
            <input type="hidden" class="totalBiaya" name="totalBiaya" >
        </form>

    </div>

    <!-- <div class="container">
        <form action="/dashboard/order" method="post" class="hiddenPostOrder">

            
            <input type="submit" value="" class="btn btn-outline-primary">
            
        </form>
    </div> -->
    <div>
        <button class="btn btn-outline-primary" onclick="calculatePesananan()">Calculate</button>
    </div>
    <div class="row justify-content-evenly">
        <div class="col-4">
            <label for="">Total</label>
        </div>
        <div class="col-4" >
            <Input id="totalBiaya" name="totalBiaya" readonly disabled></Input>
        </div>
    

    </div>
    <script src="/javascripts/dashboard.js"></script>
    <script src="https://unpkg.com/rxjs@^7/dist/bundles/rxjs.umd.min.js"></script>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

</body>
</html>