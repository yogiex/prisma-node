<%- include('./layouts/topDashboard'); %>
<h1>category page</h1>
<i class="fas fa-plus-square fa-2x d-flex justify-content-end" data-bs-toggle="modal" data-bs-target="#modalAddCategory">  </i>
<div class="modal fade" id="modalAddCategory" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form action="/users/add" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Form Tambah Category</h5>
                </div>

                <div class="modal-body">
                    
                        <div class="row justify-content-evenly">
                            <div class="col-2">
                                <label for="inputNama" class="col-form-label">Nama</label>
                            </div>
                            <div class="col-8">
                                <input type="text" class="form-control" name="name">
                            </div>
                        </div>
    
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>

            </form>
        </div>
    </div>
</div>


<div>
    <table class="table table-dark">
            <thead>
                <tr>
                    <th>category name</th>
                    <th>jumlah makanan</th>
                </tr>
            </thead>

            <% for (let i=0;i<dataCategory.length;i++) { %>
                <tr>
                    <td><%= dataCategory[i].name %></td>
                    <td><%= dataCategory[i].foods %></td>
                </tr>
            <% } %>
    </table>
</div>
<%- include('./layouts/footerDashboard'); %>